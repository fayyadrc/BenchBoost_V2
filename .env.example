# MongoDB Configuration
# Copy this file to .env and fill in your actual values

# MongoDB connection URI
# For local MongoDB: mongodb://localhost:27017
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGO_URI=mongodb://localhost:27017

# Database name for FPL data
DB_NAME=fpl_database

# Optional: Collection name (if using a specific collection)
COLLECTION_NAME=

# Google API Key (for chatbot functionality)
GOOGLE_API_KEY=your_google_api_key_here

# Server Configuration (optional, defaults shown)
# HOST=0.0.0.0              # Server bind address
# PORT=8000                 # Server port
# UVICORN_RELOAD=false      # Enable auto-reload for development (true/false)

# Frontend URLs for CORS (optional, comma-separated)
# Leave unset to allow all origins (*)
# FRONTEND_URLS=http://localhost:5173,http://localhost:3000
